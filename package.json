{
  "name": "sport-booking-backend",
  "version": "1.0.0",
  "description": "Sport booking backend (direct PostgreSQL)",
  "main": "dist/server.js",
  "scripts": {
    "build": "rm -rf dist && tsc && mkdir -p dist/specification && cp src/specification/swagger.yaml dist/specification/",
    "prestart": "test -x node_modules/.bin/tsc && npm run build || true",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:watch": "nodemon --exec ts-node src/server.ts",
    "migrate": "ts-node src/scripts/migrate.ts",
    "docker:up": "docker-compose -f docker-compose-dev.yml up -d",
    "docker:down": "docker-compose -f docker-compose-dev.yml down",
    "docker:restart": "docker-compose -f docker-compose-dev.yml down && docker-compose -f docker-compose-dev.yml up --build -d",
    "docker:logs": "docker-compose -f docker-compose-dev.yml logs -f backend",
    "docker:build": "docker-compose -f docker-compose-dev.yml build"
  },
  "dependencies": {
    "@types/yamljs": "^0.2.34",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.16",
    "pg": "^8.11.5",
    "swagger-ui-express": "^5.0.1",
    "umzug": "^3.8.2",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.10.9",
    "@types/swagger-ui-express": "^4.1.8",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.0"
  }
}
